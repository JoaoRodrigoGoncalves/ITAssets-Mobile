<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MeusDetalhesFragment"
    android:orientation="vertical"
    android:padding="5dp">



    <TextView
        android:id="@+id/tv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample Text"
        android:gravity="center_vertical"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_user" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample@Text.Text"
        android:gravity="center_vertical"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_email"/>

    <TextView
        android:id="@+id/tv_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample Text"
        android:gravity="center_vertical"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_role"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_terminar_sessao"
        android:drawableStart="@drawable/ic_action_logout"
        android:layout_marginTop="50dp"
        android:onClick="BTN_Logout"/>

</LinearLayout>